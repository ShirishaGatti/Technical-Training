class Solution {
    public int countHomogenous(String s) {
        int count=1,j=1;
        long ans =1;
        int mod = 1_000_000_007;
        for( j=1;j<s.length();j++){
         
            if(s.charAt(j-1)==s.charAt(j) ){
              //  System.out.println(s.charAt(i)+" "+s.charAt(j));
                count++;
            }
            else{
                count=1;
                //i=j;
            }
            ans=(count+ans)%mod;
        }
        return(int) ans;
    }
}